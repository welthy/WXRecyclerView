<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="4dp"
    android:clickable="true"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/left_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/left_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="leftEdit"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/left_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="leftDelete"
            android:textAllCaps="false"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/middle_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:background="@color/md_pink_100">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="12dp"
            android:layout_centerVertical="true"/>

        <Button
            android:id="@+id/jump"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:text="JUMP"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/right_menu"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/right_edit"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="rightEdit"
            android:textAllCaps="false"/>

        <Button
            android:id="@+id/right_delete"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="rightDelete"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>